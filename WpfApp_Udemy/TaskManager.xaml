<Window x:Class="WpfApp_Udemy.TaskManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Udemy"
        mc:Ignorable="d"
        Title="TaskManager" Height="450" Width="300">
    <Grid Background="Blue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <ScrollViewer Background="DarkBlue" Grid.Row="1" Grid.Column="1">
            <TextBlock Name="TextBlock" TextWrapping="Wrap" Foreground="White" Margin="0,0,10,0"/>
        </ScrollViewer>

        <TextBox Name="inputBox" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" KeyDown="inputBox_KeyDown"/>

        <Button Name="AddBuddton" Content="Add task" Grid.Row="3" Grid.Column="1" 
                Margin="5,5,5,5" Click="AddBuddton_Click" Background="Black" FontWeight="Bold" FontSize="16" Foreground="White"/>

    </Grid>
</Window>
